            "required": true,
            "schema": {
              "type": "string",
              "example": "Bearer token"
            }
          },
          {
            "name": "postId",
            "in": "path",
            "description": "Post ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
