    "/search": {
      "get": {
        "operationId": "searchPosts",
        "summary": "Search posts by querystring",
        "description": "Search posts by querystring",
        "tags": [
          "Blog Service"
        ],
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Query String",
            "required": true,
            "schema": {
              "type": "string",
              "example": "sample"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "format": "int64",
                            "example": 1
                          },
                          "title": {
                            "type": "string",
                            "example": "Title"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "requestBodies": {
      "UserLoginCredentials": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "test@test.com"
                },
                "password": {
                  "type": "string",
                  "example": "testtest"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        }
      },
      "UserSignupCredentials": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "test@test.com"
                },
                "password": {
                  "type": "string",
                  "example": "testtest"
                },
                "name": {
                  "type": "string",
                  "example": "Test User"
                },
                "dateOfBirth": {
                  "type": "string",
                  "example": "2000-08-28"
                }
              },
              "required": [
                "email",
                "password",
                "name",
                "dateOfBirth"
              ]
            }
          }
        }
      },
      "PostBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "Title"
                },
                "content": {
                  "type": "string",
                  "example": "Content"
                },
                "published": {
                  "type": "boolean",
                  "example": false
                }
              },
              "required": [
                "title",
                "content"
              ]
            }
          }
        }
      }
    },
    "schemas": {
      "UserLoginResponse": {
        "type": "object",
        "properties": {
          "uid": {
            "type": "string"
          },
          "accessToken": {
            "type": "string"
          }
        }
      },
      "UserSignupResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "test@test.com"
          },
          "password": {
            "type": "string",
            "example": "testtest"
          },
          "createdAt": {
            "type": "string",
            "example": "2021-11-20"
          },
          "dateOfBirth": {
            "type": "string",
            "example": "2000-08-28"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "error"
          },
          "message": {
            "type": "string",
            "example": "Error Message"
          }
        }
      },
      "Post": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Title"
          },
          "content": {
            "type": "string",
            "example": "Content"
          },
          "published": {
            "type": "boolean",
            "example": false
          },
          "createdAt": {
            "type": "string",
            "example": "2021-11-20T07:10:01.779195+00:00"
          },
          "lastUpdated": {
            "type": "string",
            "example": "2021-11-20T07:10:01.779195+00:00"
          },
          "author": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Test User"
              }
            }
          }
        }
      }
    }
  }
}